<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonfon"
    tools:context=".Foniqar">
    <TextView

        android:id="@+id/text_dab"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/protest"
        android:gravity="center"
        android:text="Duoline"
        android:textColor="@color/black"
        android:textSize="55dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dab"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/h11"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_background">
            <Button
                android:id="@+id/h1"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="H1"
                android:backgroundTint="#0085FBE0"
                android:foreground="@drawable/zemlyaska"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/h22"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_background">
            <Button
                android:id="@+id/h2"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="H1"
                android:backgroundTint="#0085FBE0"
                android:foreground="@drawable/vozdushok"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h33"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_background">
            <Button
                android:id="@+id/h3"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="H1"
                android:backgroundTint="#0085FBE0"
                android:foreground="@drawable/jurik"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h44"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_background">
            <Button
                android:id="@+id/h4"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="H1"
                android:backgroundTint="#0085FBE0"
                android:foreground="@drawable/krakikochka"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bomj1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dab"
        android:orientation="vertical"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/xosq1"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/protest"
            android:text="A 3x3 field for two players, where the winner is the one who first scores 2 points"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/xosq2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/protest"
            android:text="A 4x4 field for two players, where the winner is the one who first scores 4 points"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/xosq3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/protest"
            android:text="A 5x5 field for two players, where the winner is the one who first scores 5 points"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/xosq4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/protest"
            android:text="A 6x6 field for two players, where the winner is the one who first scores 6 points"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

    <Button
        android:id="@+id/selectWindPage"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/bomj1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-111dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/protest"
        android:onClick="Help_us"
        android:text="ð“†©SELECTð“†ª"
        android:textColor="#3E3C3C"
        android:textSize="25dp" />




</RelativeLayout>