<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".Tellephone">

    <TextView
        android:id="@+id/text_dab"
        android:layout_width="424dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/protest"
        android:gravity="center"
        android:text="Chats"
        android:textColor="@color/black"
        android:textSize="120sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dab"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="1025dp"
            android:layout_height="307dp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="265dp"
                android:layout_height="307dp"
                android:layout_margin="10sp"
                android:src="@drawable/pc1" />

            <TextView
                android:layout_width="255dp"
                android:layout_height="151dp"
                android:layout_margin="10sp"
                android:fontFamily="@font/protest"
                android:text="Luna"
                android:textColor="@color/black"
                android:textSize="80sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="265dp"
                android:layout_height="307dp"
                android:layout_margin="10sp"
                android:src="@drawable/pc2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elion"
                android:fontFamily="@font/protest"
                android:textSize="80sp"
                android:textColor="@color/black"
                android:layout_margin="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="265dp"
                android:layout_height="307dp"
                android:layout_margin="10sp"
                android:src="@drawable/pc3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faira"
                android:fontFamily="@font/protest"
                android:textSize="80sp"
                android:textColor="@color/black"
                android:layout_margin="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="265dp"
                android:layout_height="307dp"
                android:layout_margin="10sp"
                android:src="@drawable/pc4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sylphia"
                android:fontFamily="@font/protest"
                android:textSize="80sp"
                android:textColor="@color/black"
                android:layout_margin="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/et_veradardz"
        android:layout_width="171dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/text_dab"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="96dp"
        android:layout_marginBottom="45dp"
        android:layout_toLeftOf="@+id/text_dab"
        android:backgroundTint="@color/white"
        android:onClick="goBack"
        android:text="BACK"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/butun"
        android:layout_width="408dp"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#56DC5D88"
        android:onClick="select"
        android:text="START"
        android:textSize="40dp" />

</RelativeLayout>
