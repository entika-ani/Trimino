<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".S2_11"
    android:background="@drawable/pak"
    android:id="@+id/darkGreenLayout">

    <ImageView
        android:id="@+id/lunaf"
        android:layout_width="1035dp"
        android:layout_height="1308dp"
        android:layout_above="@+id/magaxat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heraxos" />

    <ImageView

        android:id="@+id/magaxat"
        android:layout_width="1032dp"
        android:layout_height="376dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="-15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/magaxat" />


    <TextView
        android:id="@+id/luna_textview"
        android:layout_width="949dp"
        android:layout_height="331dp"
        android:layout_alignTop="@+id/magaxat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="That day you found me, and in the other you lost me. The other time we were laughing together, but after that you were crying without stopping.Doesn't anything come to mind?"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <Button
        android:id="@+id/n_ej"
        android:layout_width="245dp"
        android:layout_height="143dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#B5B3B3"
        android:onClick="back"
        android:text="BACK"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold|italic" />
</RelativeLayout>