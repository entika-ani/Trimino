<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/darkGreenLayout"
    android:background="@drawable/titer"
    tools:context=".glux8.I4">

    <Button
        android:id="@+id/n_ej"
        android:layout_width="245dp"
        android:layout_height="143dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#4BB5B3B3"
        android:onClick="back"
        android:text="BACK"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/lunaf"
        android:layout_width="856dp"
        android:layout_height="739dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-138dp"
        android:layout_marginBottom="960dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s_fact2" />

    <ImageView

        android:id="@+id/magaxat"
        android:layout_width="1011dp"
        android:layout_height="515dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="658dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/block" />

    <TextView
        android:layout_width="924dp"
        android:layout_height="322dp"
        android:layout_alignEnd="@+id/magaxat"
        android:layout_alignBottom="@+id/magaxat"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="128dp"
        android:text="Memories are flooding back. I've loved butterflies all my life. I remember how I used to ask Sister Elion to call them for me when I was a child. Those were the good times."
        android:textColor="@color/black"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/lunad"
        android:layout_width="672dp"
        android:layout_height="1470dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="395dp"
        android:layout_marginBottom="-388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f_fact4" />

    <ImageView

        android:id="@+id/magaxat3"
        android:layout_width="599dp"
        android:layout_height="464dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="-67dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/block" />

    <TextView
        android:layout_width="488dp"
        android:layout_height="283dp"
        android:layout_alignEnd="@+id/magaxat3"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="43dp"
        android:text="Okay, let's go inside."
        android:textColor="@color/black"
        android:textSize="50dp" />

</RelativeLayout>