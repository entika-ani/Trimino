<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView

        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fon" />

    <TextView
        android:id="@+id/sumTextView"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WAR_PRINCEESS"
        android:gravity="center"
        android:text="Coins"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/WAR_PRINCEESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0.5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/protest"
        android:text="WAR PRINCEESS"
        android:textColor="@color/black"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="337dp"
        android:layout_height="280dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/sumTextView"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/bam" />


    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/protest"
        android:onClick="startNEWActivity"
        android:text="Play!"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/protest"
        android:onClick="startAbout"
        android:text="About game"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="startLetters"
            android:text="💌"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="35dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="openWheel"
            android:backgroundTint="#FFFFFF"
            android:text="🪙"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="game"
            android:text="🛒"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button8"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/sumTextView"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:text="⚙️" />


    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button8"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/white"
        android:onClick="startStories"
        android:text="✒️" />


</RelativeLayout>