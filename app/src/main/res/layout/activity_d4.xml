<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/darkGreenLayout"
    android:background="@drawable/silfa_tun"
    tools:context=".glux7.D4">

    <Button
        android:id="@+id/n_ej"
        android:layout_width="245dp"
        android:layout_height="143dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#4BB5B3B3"
        android:onClick="back"
        android:text="BACK"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/lunaf"
        android:layout_width="659dp"
        android:layout_height="669dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-138dp"
        android:layout_marginBottom="1031dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s_fact2" />

    <ImageView

        android:id="@+id/magaxat"
        android:layout_width="481dp"
        android:layout_height="374dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="-77dp"
        android:layout_marginBottom="1100dp"
        android:layout_toStartOf="@+id/lunaf"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/block" />

    <TextView
        android:layout_width="409dp"
        android:layout_height="169dp"
        android:layout_alignEnd="@+id/magaxat"
        android:layout_alignBottom="@+id/magaxat"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="129dp"
        android:text="Yeah, go on."
        android:textColor="@color/black"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/lunad"
        android:layout_width="925dp"
        android:layout_height="1914dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-317dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f" />

    <ImageView

        android:id="@+id/magaxat3"
        android:layout_width="865dp"
        android:layout_height="457dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="-67dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/block" />

    <TextView
        android:layout_width="719dp"
        android:layout_height="300dp"
        android:layout_alignEnd="@+id/magaxat3"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="43dp"
        android:text="This morning, there was an assassination attempt on Princess Luna in the palace, but Elion was the one who got hurt."
        android:textColor="@color/black"
        android:textSize="50dp" />


</RelativeLayout>