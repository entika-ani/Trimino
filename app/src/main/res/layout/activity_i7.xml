    <ImageView

        android:id="@+id/magaxat"
        android:layout_width="1011dp"
        android:layout_height="515dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="658dp"
