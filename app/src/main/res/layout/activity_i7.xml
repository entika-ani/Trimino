        app:srcCompat="@drawable/block" />

    <TextView
        android:layout_width="884dp"
        android:layout_height="305dp"
        android:layout_alignEnd="@+id/magaxat"
        android:layout_alignBottom="@+id/magaxat"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="135dp"
        android:text="Okay, I'll tell you. At the very beginning, I came across a book that said one of the princesses could resurrect people from the dead."
