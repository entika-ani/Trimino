<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Syu1_1y">

    <ImageView

        android:id="@+id/imageView_sad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sad" />


    <ImageView
        android:id="@+id/gion"
        android:layout_width="255dp"
        android:layout_height="538dp"
        android:layout_above="@+id/mi_hat_het"
        android:layout_marginBottom="-91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gion" />

    <Button
        android:id="@+id/nastroy"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="#B5B3B3"
        />

    <TextView
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:text="⚙️"
        android:textSize="20dp" />

    <Button
        android:id="@+id/n_ej"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#B5B3B3"
        android:text="BACK"
        android:onClick="back"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/vibor1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="112dp"
        android:onClick="ah"
        android:text="@string/vibor1"
        android:backgroundTint="#9AFAF737"
        android:background="@drawable/button_border_selector"/>

    <Button
        android:id="@+id/vibor2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/vibor1"
        android:onClick="ash"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="@string/vibor2"
        android:backgroundTint="#9AFAF737"
        android:background="@drawable/button_border_selector"/>



    <Button
        android:id="@+id/mi_hat_het"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="313dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B5B3B3"
        android:onClick="mi_hatHet" />


</RelativeLayout>