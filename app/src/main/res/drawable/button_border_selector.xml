<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нормальное состояние -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            android:backgroundTint="#9AFAF737"
            <solid android:color="#9AFAF737" /> <!-- Цвет фона кнопки -->
            <stroke android:width="2dp" android:color="#9AFAF737" /> <!-- Цвет границы кнопки -->
        </shape>
    </item>
    <!-- Состояние при нажатии -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#9AFAF737" /> <!-- Цвет фона кнопки -->
            <stroke android:width="2dp" android:color="#F5F43D05" /> <!-- Цвет границы кнопки при нажатии -->
        </shape>
    </item>
</selector>